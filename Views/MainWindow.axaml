<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SpaceInvadersMVVM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SpaceInvadersMVVM.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SpaceInvadersMVVM"
        Width="800" Height="600">

        <Canvas Name="GameCanvas">
                <Image x:Name="Background" Width="800" Height="600" Source="../Assets/Stars.gif"/>
                <Image Name="SpaceShip" Width="100" Height="100" Canvas.Left="350" Canvas.Top="500" Source="../Assets/player.gif"/>
                <Image x:Name="enemy" IsVisible="False" Source="../Assets/invader1.gif"/>
                <Image x:Name="bala" IsVisible="False" Source="../Assets/bullet.gif"/>

                <TextBlock Canvas.Left="690" Canvas.Bottom="0" Text="{Binding Score}"/>
        </Canvas>

</Window>
